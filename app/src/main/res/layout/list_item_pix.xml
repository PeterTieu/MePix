<?xml version="1.0" encoding="utf-8"?>

<!--Layout for the list item (i.e. the ViewHolder)-->

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <!--Image-->
    <ImageView
        android:id="@+id/list_pix_picture"

        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_gallery"/>


    <!--Title of the Pix-->
    <TextView
        android:id="@+id/list_pix_title"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="18dp"
        android:ellipsize="marquee"
        android:maxWidth="145dp"
        android:singleLine="true"
        android:text="Pix Title"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <!--Location of the Pix-->
    <TextView
        android:id="@+id/list_pix_location"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="22dp"
        android:ellipsize="marquee"
        android:maxWidth="140dp"
        android:singleLine="true"
        android:text="Pix Location"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/list_pix_title"
        app:layout_constraintTop_toTopOf="parent"/>


    <!--Description of the Pix-->
    <TextView
        android:id="@+id/list_pix_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:layout_marginStart="85dp"
        android:ellipsize="end"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:text="Pix Description"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <!--Tagged in Pix-->
    <TextView
        android:id="@+id/list_pix_tagged"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="85dp"
        android:ellipsize="end"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:text="Pix Tagged"
        android:textColor="@color/dark_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <!--Favorite star-->
    <ImageView
        android:id="@+id/list_pix_favorited"
        app:srcCompat="@android:drawable/btn_star_big_off"
        android:text="Pix Favorited"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <!--Date of the Pix-->
    <TextView
        android:id="@+id/list_pix_date"
        android:text="Pix Date"
        android:textColor="@android:color/darker_gray"
        android:textSize="10sp"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_pix_title"/>




</android.support.constraint.ConstraintLayout>