<?xml version="1.0" encoding="utf-8"?>

<!--Layout for the detail view-->

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pix_detail_scrollview"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/pix_detail_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <!--Title of the Pix-->
        <EditText
            android:id="@+id/detail_pix_title"
            android:hint="@string/title_hint"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:inputType="textCapWords|textMultiLine"/>

        <CheckBox
            android:id="@+id/detail_pix_favorited"
            android:text="@string/favorite"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/detail_pix_picture"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:srcCompat="@android:drawable/ic_menu_gallery"
                    />

                <!--Picture Add button for the Pix-->
                <ImageButton
                    android:id="@+id/detail_pix_add_picture"
                    android:src="@android:drawable/ic_menu_camera"
                    android:layout_gravity="center"
                    android:layout_width="92dp"
                    android:layout_height="50dp"
                    android:textColor="@color/colorButtonText"/>

            </LinearLayout>
            <!--Picture of the Pix-->



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:text="@string/details"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="@string/date"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="@string/address"
                    android:layout_marginTop="35dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="@string/with"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <!--Date Button-->
                <Button
                    android:id="@+id/detail_pix_date"
                    android:text="@string/add_date"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="@color/colorButtonText"/>


                <!--Location Button-->
                <Button
                    android:id="@+id/detail_pix_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/location_button"
                    android:textColor="@color/colorButtonText"/>


                <!--Tagged EditText-->
                <EditText
                    android:id="@+id/detail_edit_pix_tag"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/tag_people"/>

                <!--Add Tag Button-->
                <Button
                    android:id="@+id/detail_pix_tag"
                    android:text="@string/add_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textColor="@color/colorButtonText"/>

            </LinearLayout>




        </LinearLayout>



        <!--Description of Pix-->
        <EditText
            android:id="@+id/detail_pix_description"
            android:hint="@string/description_hint"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textCapSentences|textMultiLine"/>


    </LinearLayout>





</ScrollView>